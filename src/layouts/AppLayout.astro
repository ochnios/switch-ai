---
import Layout from "./Layout.astro";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "switch-ai" } = Astro.props;
---

<Layout title={title}>
  <div class="flex h-screen w-full overflow-hidden">
    <!-- Sidebar -->
    <aside
      class="flex w-64 flex-col border-r border-sidebar-border bg-sidebar"
      role="navigation"
      aria-label="Conversation list"
    >
      <slot name="sidebar" />
    </aside>

    <!-- Main Content Area -->
    <main class="flex flex-1 flex-col overflow-hidden" role="main">
      <slot name="main" />
    </main>
  </div>

  <!-- Toast notifications -->
  <Toaster client:only="react" richColors position="top-right" />
</Layout>

<style>
  /* Ensure the layout takes full viewport height */
  :global(#app-root) {
    height: 100vh;
    overflow: hidden;
  }
</style>
